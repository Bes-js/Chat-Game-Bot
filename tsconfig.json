{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",                        
      "outDir": "./build",                        
      "rootDir": "./",                  
      "strict": true,                           
      "esModuleInterop": true,                
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true  
    },
    "include": ["src/*", "src/*/*","src/*/*/*","src/*/*/*/*","src/langs/**/*.json"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }